<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="viewCustomerDetails"
    android:id="@+id/customerListLinearLayout">

    <ImageView
        android:id="@+id/listItemImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_book_image_round"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/customerListFullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/customerListPhoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="TextView"/>

    </LinearLayout>

</LinearLayout>