<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="c.bwegener.bookstore">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="landscape"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeScreenActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="landscape"
            />

        <activity
            android:name=".BookSearchActivity"
            android:parentActivityName=".HomeScreenActivity"
            android:screenOrientation="landscape"
            ></activity>

        <activity android:name=".BookDetailsActivity"
                  android:parentActivityName=".BookSearchActivity"
                  android:screenOrientation="landscape"
            ></activity>

        <activity android:name=".AddBookScreenActivity"
                  android:parentActivityName=".HomeScreenActivity"
                  android:screenOrientation="landscape"
                  android:exported="true"
                  ></activity>
    </application>

</manifest>